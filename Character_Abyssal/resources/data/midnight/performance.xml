<charmlist xmlns="http://anathema.sourceforge.net/charms">
     <!-- Performance -->
     <charm id="Solar.FaceTheLight" exalt="Solar" group="Performance">
          <prerequisite>
               <trait id="Performance" value="3" />
               <essence value="2" />
               <charmReference id="Solar.RespectCommandingAttitude" />
          </prerequisite>
          <cost>
               <essence cost="5" />
               <willpower cost="1" />
          </cost>
          <duration amount="1" unit="scene"/>
          <charmtype type="Reflexive" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Compulsion" visualize="true" />
          <charmAttribute attribute="Mirror" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="SecondEdition" />
     </charm>
     <charm id="Solar.DemonWrackingGlory" exalt="Solar" group="Performance">
          <prerequisite>
               <trait id="Performance" value="5" />
               <essence value="3" />
               <charmReference id="Solar.Phantom-ConjuringPerformance" />
          </prerequisite>
          <cost>
               <essence cost="Variable" />
               <willpower cost="1" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Simple">
            <special speed="6" defense="-2" />
          </charmtype>
          <charmAttribute attribute="Combo-Basic" visualize="true" />
          <charmAttribute attribute="Holy" visualize="true" />
          <charmAttribute attribute="Illusion" visualize="true" />
          <charmAttribute attribute="Mirror" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="SecondEdition" />
     </charm>
</charmlist>
