<charmlist xmlns="http://anathema.sourceforge.net/charms">
     <!-- Stamina -->
     <charm id="Lunar.MoonsilverAbsorption" exalt="Lunar" group="Endurance">
          <prerequisite>
               <trait id="Stamina" value="6" />
               <essence value="5" />
               <charmReference id="Lunar.UnstoppableJuggernautIncarnation" />
          </prerequisite>
          <cost />
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
     <charm id="Lunar.RelentlessLunarHorde" exalt="Lunar" group="Fury">
          <prerequisite>
               <trait id="Stamina" value="5" />
               <essence value="6" />
               <charmReference id="Lunar.RelentlessLunarFury" />
          </prerequisite>
          <cost />
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <charmAttribute attribute="War" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
     <charm id="Lunar.PurgingTheTarnishedSilver" exalt="Lunar" group="Healing">
          <prerequisite>
               <trait id="Stamina" value="6" />
               <essence value="5" />
               <charmReference id="Lunar.InstinctiveUnity.Stamina" />
               <charmReference id="Lunar.HaltingTheScarletFlow" />
          </prerequisite>
          <cost>
               <essence cost="5" text="or more motes" />
               <willpower cost="1" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Reflexive" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
     <charm id="Lunar.NativeSonsGrace" exalt="Lunar" group="Soak">
          <prerequisite>
               <trait id="Stamina" value="5" />
               <essence value="4" />
               <charmReference id="Lunar.FrenziedBearFortification" />
               <charmAttributeRequirement attribute="ExcellencyStamina" count="1" />
          </prerequisite>
          <cost>
               <essence cost="5" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Reflexive">
               <special primaryStep="7" />
          </charmtype>
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Fury-OK" visualize="true" />
          <source source="LordsOfCreation" />
		  <source source="ScrollErrata" />
     </charm>
     <charm id="Lunar.IndestructibleRecursiveDesign" exalt="Lunar" group="Soak">
          <prerequisite>
          <trait id="Stamina" value="4" />
          <essence value="4" />
          <charmReference id="Lunar.HideTougheningEssence" />
		</prerequisite>
          <cost>
               <essence cost="8" />
          </cost>
          <duration duration="Indefinite" />
          <charmtype type="Simple">
               <special speed="5" defense="-2" />
          </charmtype>
          <charmAttribute attribute="Combo-OK" visualize="true" />
		  <source source="LordsOfCreation" />
		  <source source="ScrollErrata" />
     </charm>
</charmlist>
