     <charm id="Solar.OmnipotentAdmiralAuthority" exalt="Solar" group="Sail">
          <prerequisite>
               <trait id="Sail" value="5" />
               <essence value="4" />
               <charmReference id="Solar.Storm-WeatheringEssenceInfusion" />
          </prerequisite>
          <cost>
               <essence cost="12" />
