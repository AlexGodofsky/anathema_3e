     <charm id="Solar.GuidingWordsOfSolarWisdom" exalt="Solar" group="Linguistics">
          <prerequisite>
               <trait id="Linguistics" value="5" />
               <essence value="4" />
               <charmReference id="Solar.Letter-Within-a-LetterTechnique" />
          </prerequisite>
          <cost>
               <essence cost="15" />
               <willpower cost="1" />
          </cost>
          <duration duration="Instant" />
