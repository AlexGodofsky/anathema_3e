<charmlist xmlns="http://anathema.sourceforge.net/charms">
     <!-- Medicine -->
     <charm id="Solar.AHoodOnDeath" exalt="Solar" group="Medicine">
          <prerequisite>
               <trait id="Medicine" value="7" />
               <essence value="7" />
               <charmReference id="Solar.Contagion-CuringTouch" />
               <charmReference id="Solar.Ailment-RectifyingMethod" />
          </prerequisite>
          <cost>
               <essence cost="20" />
               <willpower cost="1" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="LordsOfCreation" />
			<source source="ScrollErrata" />
     </charm>
     <charm id="Solar.MiracleWorkersRedemption" exalt="Solar" group="Medicine">
          <prerequisite>
               <trait id="Medicine" value="5" />
               <essence value="5" />
               <charmReference id="Solar.Wholeness-RestoringMeditation" />
          </prerequisite>
          <cost />
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <charmAttribute attribute="Native" visualize="true" />
          <charmAttribute attribute="Reactor" visualize="true" />
			<source source="LordsOfCreation" />
          <source source="ScrollErrata" />
     </charm>
     <charm id="Solar.ScienceOfMutation" exalt="Solar" group="Medicine">
          <prerequisite>
               <trait id="Medicine" value="7" />
               <essence value="7" />
               <charmReference id="Solar.Wholeness-RestoringMeditation" />
          </prerequisite>
          <cost>
               <essence cost="10" text="per mutation point" />
               <willpower cost="1" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Simple">
               <special speed="6" turntype="DramaticAction" defense="-0" />
          </charmtype>
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Stackable" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
	<charm id="Solar.MindSoothingAnodyne" exalt="Solar" group="Medicine">
		<!-- NOTE:  Solar/Presence "Mirror" - Hastening Nights End -->
		<prerequisite>
			<trait id="Medicine" value="5" />
			<essence value="4" />
			<charmReference id="Solar.FlawlessDiagnosisTechnique" />
			<charmReference id="Solar.TouchBlissfulRelease" />
		</prerequisite>
		<cost>
			<essence cost="10" />
		</cost>
		<duration duration="Instant" />
		<charmtype type="Simple">
			<special turntype="DramaticAction" />
		</charmtype>
			<charmAttribute attribute="Combo-OK" visualize="true" />
			<charmAttribute attribute="Emotion" visualize="true" />
			<charmAttribute attribute="Obvious" visualize="true" />
		<source source="ScrollErrata" />
	</charm>
</charmlist>
