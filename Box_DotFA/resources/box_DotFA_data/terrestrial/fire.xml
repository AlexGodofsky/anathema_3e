<charmlist xmlns="http://anathema.sourceforge.net/charms">
     <!-- Fire -->
     <charm id="Dragon-Blooded.SeethingDragonFootprint" exalt="Dragon-Blooded" group="Athletics">
          <prerequisite>
               <trait id="Athletics" value="5" />
               <essence value="5" />
               <charmReference id="Dragon-Blooded.DancingEmberStride" />
          </prerequisite>
          <cost>
               <essence cost="10" />
               <willpower cost="1" />
          </cost>
          <duration amount="1" unit="scene" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Combo-Basic" visualize="true" />
          <charmAttribute attribute="Elemental" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
     <charm id="Dragon-Blooded.EvasiveElementalDispersion" exalt="Dragon-Blooded" group="Dodge">
          <prerequisite>
               <trait id="Dodge" value="6" />
               <essence value="6" />
               <charmReference id="Dragon-Blooded.ElementalDefenseTechnique" />
               <charmReference id="Dragon-Blooded.UnassailableBodyElementDefense" />
          </prerequisite>
          <cost />
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <charmAttribute attribute="Elemental" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
     <charm id="Dragon-Blooded.OrdainedTalonOfDraconicFury" exalt="Dragon-Blooded" group="Melee">
          <prerequisite>
               <trait id="Melee" value="6" />
               <essence value="6" />
               <charmReference id="Dragon-Blooded.Ghost-FireBlade" />
               <charmReference id="Dragon-Blooded.RefiningInnerBlade" />
               <charmReference id="Dragon-Blooded.PortentousCometDeflectingMethod" />
               <charmReference id="Dragon-Blooded.RingingAnvilOnslaught" />
          </prerequisite>
          <cost>
               <essence cost="-(1m to draw)" />
          </cost>
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <charmAttribute attribute="Elemental" visualize="true" />
          <charmAttribute attribute="Holy" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
     <charm id="Dragon-Blooded.PurityCrucibleStrike" exalt="Dragon-Blooded" group="Presence">
          <prerequisite>
               <trait id="Presence" value="6" />
               <essence value="6" />
               <charmReference id="Dragon-Blooded.TerrifyingElementDragonRoar" />
          </prerequisite>
          <cost>
               <essence cost="5" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Supplemental" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <charmAttribute attribute="Training" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
     <charm id="Dragon-Blooded.ImplacableProgenitorMien" exalt="Dragon-Blooded" group="Socialize">
          <prerequisite>
               <trait id="Socialize" value="6" />
               <!-- TODO:  Targeting Background? ->
               <trait id="Breeding" value="5" /-->
               <essence value="6" />
               <charmReference id="Dragon-Blooded.JadeDefense" />
               <charmReference id="Dragon-Blooded.WaryYellowDogAttitude" />
               <charmReference id="Dragon-Blooded.Brother-Against-BrotherInsinuation" />
          </prerequisite>
          <cost />
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <charmAttribute attribute="Dynasty" visualize="true" />
          <charmAttribute attribute="Purity" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
</charmlist>
