<charmlist xmlns="http://anathema.sourceforge.net/charms">
     <!-- Air -->
     <charm id="Dragon-Blooded.HonoredAncestorExhalation" exalt="Dragon-Blooded" group="Linguistics">
          <prerequisite>
               <trait id="Linguistics" value="5" />
               <!-- TODO:  Targeting Background? ->
               <trait id="Breeding" value="3" /--
               <essence value="6" />
               <charmReference id="Dragon-Blooded.SpeechWithoutWords" />
               <charmReference id="Dragon-Blooded.WithOneMind" />
          </prerequisite>
          <cost>
               <essence cost="10" />
               <willpower cost="2" />
          </cost>
          <duration duration="Indefinite" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Dynasty" visualize="true" />
          <charmAttribute attribute="Martyr" visualize="true" />
          <charmAttribute attribute="Purity" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
     <charm id="Dragon-Blooded.EndlessCoilsEnlightenment" exalt="Dragon-Blooded" group="Lore">
          <prerequisite>
               <trait id="Lore" value="6" />
               <!-- TODO:  Targeting Background? ->
               <trait id="Breeding" value="5" /-->
               <essence value="6" />
               <charmReference id="Dragon-Blooded.EternalMindMeditation" />
               <charmReference id="Dragon-Blooded.ElementalSuccorMethod" />
          </prerequisite>
          <cost>
               <essence cost="15" />
               <willpower cost="1" />
          </cost>
          <duration amount="1" unit="scene" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Emotion" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <charmAttribute attribute="Purity" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
     <charm id="Dragon-Blooded.MantleOfElementalFusion" exalt="Dragon-Blooded" group="Occult">
          <prerequisite>
               <trait id="Occult" value="6" />
               <essence value="6" />
               <charmReference id="Dragon-Blooded.Spirit-ChainingStrike" />
          </prerequisite>
          <cost>
               <essence cost="5" />
               <willpower cost="1" />
          </cost>
          <duration duration="Indefinite" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Elemental" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <charmAttribute attribute="Touch" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
     <charm id="Dragon-Blooded.HiddenMaelstromCloak" exalt="Dragon-Blooded" group="Stealth">
          <prerequisite>
               <trait id="Stealth" value="5" />
               <essence value="5" />
               <charmReference id="Dragon-Blooded.DragonShroudTechnique" />
          </prerequisite>
          <cost>
               <essence cost="-(+1m per ally or +1wp for a vehicle)" />
          </cost>
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <source source="LordsOfCreation" />
     </charm>
     <charm id="Dragon-Blooded.HurricaneHandGesture" exalt="Dragon-Blooded" group="Thrown">
          <prerequisite>
               <trait id="Thrown" value="5" />
               <essence value="5" />
               <charmReference id="Dragon-Blooded.DeadlyBladesFiveDragon" />
          </prerequisite>
          <cost>
               <essence cost="2" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Simple">
               <special speed="4" defense="-1" />
          </charmtype>
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Elemental" visualize="true" />
          <source source="LordsOfCreation" />
     </charm>
</charmlist>
