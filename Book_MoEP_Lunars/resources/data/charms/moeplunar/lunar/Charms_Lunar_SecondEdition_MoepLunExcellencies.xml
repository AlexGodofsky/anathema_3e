<charmlist xmlns="http://anathema.sourceforge.net/charms">
     <!-- Lunar Excellencies -->
     <genericCharm id="Lunar.1stExcellency" exalt="Lunar">
          <prerequisite>
               <trait value="1" />
               <essence value="1" />
          </prerequisite>
          <cost>
               <essence cost="1" text="per die" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Reflexive">
               <special primaryStep="1" secondaryStep="2" />
          </charmtype>
          <combo>
               <restrictions>
                    <genericCharmReference id="Lunar.3rdExcellency" />
               </restrictions>
          </combo>
          <genericCharmAttribute attribute="Excellency" />
          <charmAttribute attribute="Mortal" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <source source="Lunars2nd" page="140" />
     </genericCharm>
     <genericCharm id="Lunar.2ndExcellency" exalt="Lunar">
          <prerequisite>
               <trait value="1" />
               <essence value="1" />
          </prerequisite>
          <cost>
               <essence cost="2" text="per success" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Reflexive">
               <special primaryStep="1" secondaryStep="2" />
          </charmtype>
          <combo>
               <restrictions>
                    <genericCharmReference id="Lunar.3rdExcellency" />
               </restrictions>
          </combo>
          <genericCharmAttribute attribute="Excellency" />
          <charmAttribute attribute="Mortal" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <source source="Lunars2nd" page="140" />
     </genericCharm>
     <genericCharm id="Lunar.3rdExcellency" exalt="Lunar">
          <prerequisite>
               <trait value="1" />
               <essence value="1" />
          </prerequisite>
          <cost>
               <essence cost="4" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Reflexive">
               <special primaryStep="4" secondaryStep="6" />
          </charmtype>
          <genericCharmAttribute attribute="Excellency" />
          <charmAttribute attribute="Mortal" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <source source="Lunars2nd" page="185" />
     </genericCharm>
     <!-- Unique Lunar Excellencies -->
     <genericCharm id="Lunar.InstinctiveUnity" exalt="Lunar">
          <prerequisite>
               <trait value="4" />
               <essence value="3" />
               <genericCharmAttributeRequirement attribute="Excellency" />
          </prerequisite>
          <cost>
               <essence cost="2" text="or more" />
               <willpower cost="1" />
          </cost>
          <duration amount="1" unit="scene" />
          <charmtype type="Simple" />
          <genericCharmAttribute attribute="Excellency" />
			<!-- NOTE:  Solar/General "Mirror" - Infinite (Ability) Mastery -->
          <charmAttribute attribute="Mortal" />
          <source source="Lunars2nd" />
     </genericCharm>
     <genericCharm id="Lunar.FlawlessFocus" exalt="Lunar">
          <prerequisite>
               <trait value="4" />
               <essence value="3" />
               <genericCharmAttributeRequirement attribute="Excellency" />
          </prerequisite>
          <cost />
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <genericCharmAttribute attribute="Excellency" />
          <charmAttribute attribute="Mortal" />
          <source source="Lunars2nd" />
     </genericCharm>
	
</charmlist>
