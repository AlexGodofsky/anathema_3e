<charmlist xmlns="http://anathema.sourceforge.net/charms">
     <!-- Interaction Charms -->
     <charm id="Lunar.ChatteringMagpieInflection" exalt="Lunar" group="Interaction">
          <prerequisite>
               <trait id="Manipulation" value="3" />
               <essence value="1" />
               <charmAttributeRequirement attribute="ExcellencyManipulation" count="1" />
          </prerequisite>
          <cost>
               <essence cost="3" text="per attack" />
          </cost>
          <duration amount="1" unit="tick" />
          <charmtype type="Reflexive">
               <special primaryStep="1" />
          </charmtype>
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Social" visualize="true" />
          <source source="Lunars2nd" />
     </charm>
     <charm id="Lunar.FallingLeafDistraction" exalt="Lunar" group="Interaction">
          <prerequisite>
               <trait id="Manipulation" value="3" />
               <essence value="2" />
               <charmAttributeRequirement attribute="ExcellencyManipulation" count="1" />
          </prerequisite>
          <cost>
               <essence cost="3" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Supplemental" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Social" visualize="true" />
          <source source="Lunars2nd" />
     </charm>
     <charm id="Lunar.ThirdVeilSuggestion" exalt="Lunar" group="Interaction">
          <prerequisite>
               <trait id="Manipulation" value="3" />
               <essence value="4" />
               <charmReference id="Lunar.FallingLeafDistraction" />
          </prerequisite>
          <cost>
               <essence cost="3" />
               <willpower cost="1" />
          </cost>
          <duration amount="1" unit="scene" />
          <charmtype type="Simple">
               <special speed="3" turntype="LongTick" defense="-1" />
          </charmtype>
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Social" visualize="true" />
          <source source="Lunars2nd" />
     </charm>
     <charm id="Lunar.PerfectionOfTheMockingbird" exalt="Lunar" group="Interaction">
          <prerequisite>
               <trait id="Manipulation" value="3" />
               <essence value="2" />
               <charmAttributeRequirement attribute="ExcellencyManipulation" count="1" />
          </prerequisite>
          <cost>
               <essence cost="4" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Supplemental" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Illusion" visualize="true" />
          <source source="Lunars2nd" />
     </charm>
</charmlist>
