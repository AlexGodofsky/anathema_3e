<charmlist xmlns="http://anathema.sourceforge.net/charms">
     <!-- Healing Charms -->
     <charm id="Lunar.BruiseReliefMethod" exalt="Lunar" group="Healing">
          <prerequisite>
               <trait id="Stamina" value="2" />
               <essence value="2" />
               <charmAttributeRequirement attribute="ExcellencyStamina" count="1" />
          </prerequisite>
          <cost>
               <essence cost="1" text="per level of Bashing damage" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Reflexive" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Gift" visualize="true" />
          <source source="Lunars2nd" />
     </charm>
     <charm id="Lunar.HaltingTheScarletFlow" exalt="Lunar" group="Healing">
          <prerequisite>
               <trait id="Stamina" value="4" />
               <essence value="2" />
               <charmReference id="Lunar.BruiseReliefMethod" />
          </prerequisite>
          <cost>
               <essence cost="2" text="per level of Lethal damage" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Reflexive" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Gift" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="Lunars2nd" />
     </charm>
</charmlist>
