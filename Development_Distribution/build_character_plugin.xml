<?xml version="1.0" encoding="iso-8859-1"?>
<project name="Build Character Plugin" default="Build Character JAR">

	<property name="projectset" value="Character_Generic,Character_Generic_Impl,Character_Generic_Framework,Character_Reporting,Character_Library,Charm_Tree,Character_Intimacies,Character_Equipment,Character_Equipment_Impl,Character_MeritsFlaws,Character_Main,Character_Main_Impl,Charm_Entry,Character_Mortal,Character_Solar,Character_Db,Character_Lunar,Character_Abyssal,Character_Sidereal" />
	<property name="module.name" value="character" />

	<import file="common_plugin_targets.xml" />

	<target name="Build Character JAR" depends="Prepare, Build module, Compile classpath, Copy resources">
		<property file="${classpath.file}" />
		<jar destfile="${build.dir}/character.jar">
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
				<attribute name="Class-Path" value="${module.classpath}" />
			</manifest>
			<fileset dir="${class.dir}" includes="**/*" />
			<fileset dir="${resource.dir}" includes="**/*" />
		</jar>
	</target>
</project>