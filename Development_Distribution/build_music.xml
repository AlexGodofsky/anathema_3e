<?xml version="1.0"?>
<project name="Build Music">

	<import file="compile.xml" />
	<import file="copy_music.xml" />

	<target name="Build Music JAR" depends="Copy Music Projects, Copy Music Thirdparty, Compile" description="Compile the music database JAR file">
		<jar destfile="${dist}/music.jar">
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
				<attribute name="Class-Path" value="${lib}/db4o-5.2-java5.jar ${lib}/basicplayer2.3.jar ${lib}/javalayer.jar ${lib}/mp3spi1.9.2.jar ${lib}/tritonus_share.jar" />
			</manifest>
			<fileset dir="${dist_class}" includes="**/${musicDir}/**/*" />
			<fileset dir="${dist}/${musicDir}/${resourceDir}" includes="**/*" />
		</jar>
	</target>
</project>