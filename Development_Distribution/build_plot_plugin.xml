<?xml version="1.0" encoding="iso-8859-1"?>
<project name="Build Plot Plugin" default="Build Plot JAR">

	<property name="projectset" value="Campaign_Plot" />
	<property name="module.name" value="plot" />

	<import file="common_plugin_targets.xml" />

	<target name="Build Plot JAR" depends="Prepare, Build module, Compile classpath, Copy resources">
		<property file="${classpath.file}" />
		<jar destfile="${build.dir}/plot.jar">
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
				<attribute name="Class-Path" value="${module.classpath}" />
			</manifest>
			<fileset dir="${class.dir}" includes="**/*" />
			<fileset dir="${resource.dir}" includes="**/*" />
		</jar>
	</target>
</project>