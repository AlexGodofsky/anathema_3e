<?xml version="1.0" encoding="iso-8859-1"?>
<project name="Build Charm Cascades Plugin" default="Build Charm Cascades JAR">

	<property name="projectset" value="Charm_Cascades" />
	<property name="module.name" value="charmcascades" />

	<import file="common_plugin_targets.xml" />

	<target name="Build Charm Cascades JAR" depends="Prepare, Build module, Compile classpath, Copy resources">
		<property file="${classpath.file}" />
		<jar destfile="${build.dir}/charmcascades.jar">
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
				<attribute name="Class-Path" value="${module.classpath}" />
			</manifest>
			<fileset dir="${class.dir}" includes="**/*" />
			<fileset dir="${resource.dir}" includes="**/*" />
		</jar>
	</target>
</project>