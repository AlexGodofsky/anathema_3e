<charmlist xmlns="http://anathema.sourceforge.net/charms">
     <!-- Stealth -->
     <charm id="Abyssal.ShadowCloakTechnique" exalt="Abyssal" group="Stealth">
          <prerequisite>
               <trait id="Stealth" value="3" />
               <essence value="1" />
          </prerequisite>
          <cost />
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <charmAttribute attribute="Mirror" visualize="true" />
          <!-- NOTE:  Solar Mirror - Easily Overlooked Presence Method -->
          <source source="Abyssals2nd" />
     </charm>
     <charm id="Abyssal.UnseenWispMethod" exalt="Abyssal" group="Stealth">
          <prerequisite>
               <trait id="Stealth" value="5" />
               <background id="Whispers" value="1" />
               <essence value="2" />
               <charmReference id="Abyssal.ShadowCloakTechnique" />
          </prerequisite>
          <cost>
               <essence cost="4" />
          </cost>
          <duration amount="1" unit="hour" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Avatar1" visualize="true" />
          <charmAttribute attribute="Combo-Basic" visualize="true" />
          <charmAttribute attribute="Spectral" visualize="true" />
          <source source="Abyssals2nd" />
     </charm>
     <charm id="Abyssal.AtrocityWithoutWitness" exalt="Abyssal" group="Stealth">
          <prerequisite>
               <trait id="Stealth" value="4" />
               <essence value="2" />
               <charmReference id="Abyssal.ShadowCloakTechnique" />
          </prerequisite>
          <cost>
               <essence cost="5" />
               <willpower cost="1" />
          </cost>
          <duration amount="1" unit="scene" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Compulsion" visualize="true" />
          <charmAttribute attribute="Illusion" visualize="true" />
          <charmAttribute attribute="Mirror" visualize="true" />
          <!-- NOTE:  Solar Mirror - Mental Invisibility Technique -->
          <source source="Abyssals2nd" />
     </charm>
     <charm id="Abyssal.SplinterInTheMindsEye" exalt="Abyssal" group="Stealth">
          <prerequisite>
               <trait id="Stealth" value="5" />
               <essence value="3" />
               <charmReference id="Abyssal.AtrocityWithoutWitness" />
          </prerequisite>
          <cost>
               <essence cost="10" />
               <willpower cost="1" />
          </cost>
          <duration duration="Indefinite" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Mirror" visualize="true" />
          <!-- NOTE:  Solar Mirror - Vanishing from Mind's Eye -->
          <source source="Abyssals2nd" />
     </charm>
